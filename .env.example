# Environment variables for Goliath project
# Copy this file to .env and update with your real values

# API Keys
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# MongoDB connection
MONGODB_URI=mongodb://mongodb:27017

# Ptolemy Configuration
PTOLEMY_API_URL=http://ptolemy:8000
PTOLEMY_API_KEY=your-ptolemy-key

# Qdrant Vector Store
QDRANT_URL=http://qdrant:6333

# Neo4j Configuration
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# Application Configuration
LOG_LEVEL=DEBUG

# Development Settings
# Use these when running services directly on host
# HOST_MONGODB_URI=mongodb://localhost:27017
# HOST_PTOLEMY_API_URL=http://localhost:8000
# HOST_QDRANT_URL=http://localhost:6333
# HOST_NEO4J_URI=bolt://localhost:7687